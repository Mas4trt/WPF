<Window x:Class="YaroslavApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yaroslav App"
        WindowState="Maximized">
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="400">
            <TextBox Name="InputBox" FontSize="20" Margin="0 0 0 10"/>
            <Button Content="Показать" FontSize="20" Click="ShowButton_Click" Margin="0 0 0 10"/>
            <TextBlock Name="OutputText" FontSize="20" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
