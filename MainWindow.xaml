<Window x:Class="AngryBirdsClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AngryBirdsClone"
        Title="Angry Birds Clone" WindowState="Maximized">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="Margin" Value="5"/>
		</Style>
	</Window.Resources>
	<Grid>
		<!-- Фоновое изображение -->
		<Image Source="Image/background.jpg" Stretch="Fill" IsHitTestVisible="False"/>

		<!-- Игровая область с Canvas -->
		<Canvas Name="GameCanvas" Background="Transparent"/>

		<!-- Кнопка Play -->
		<Button Name="PlayButton" Content="Play" Width="200" Height="80"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Opacity="0.8" MouseEnter="PlayButton_MouseEnter" MouseLeave="PlayButton_MouseLeave"
                Click="PlayButton_Click"/>

		<!-- Панель ввода параметров -->
		<StackPanel Name="InputPanel" Visibility="Collapsed"
                    Orientation="Vertical" Background="#AAFFFFFF"
                    Width="300" Height="250"
                    HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
			<TextBlock Text="Начальная скорость (м/с):"/>
			<TextBox Name="SpeedTextBox"/>
			<TextBlock Text="Угол (градусы):"/>
			<TextBox Name="AngleTextBox"/>
			<TextBlock Text="Шаг времени (с):"/>
			<TextBox Name="TimeStepTextBox"/>
			<Button Content="Далее" Click="NextButton_Click"/>
		</StackPanel>

		<!-- Таблица с результатами -->
		<DataGrid Name="ResultsTable" Visibility="Collapsed"
                  Width="400" Height="300"
                  HorizontalAlignment="Right" VerticalAlignment="Top"
                  Margin="0,20,20,0"/>

		<!-- Кнопка настроек -->
		<Button Name="SettingsButton" Content="⚙" Width="40" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10"/>

		<!-- Кнопка выбора уровня -->
		<Button Name="LevelButton" Content="📜" Width="40" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,60,0,0"/>

		<!-- Кнопка выйти -->
		<Button Name="ExitButton" Content="Выйти" Width="100" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,20" Click="ExitButton_Click"/>
	</Grid>
</Window>


